/* pages/comment/comment.wxss */
page {
  background-color: #E0FFFF;
}

.publish_image {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
}

.tucao {
  width: 100%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.box{
  width: 96%;
  background-color: 	#F5FFFA;
  border: solid 1rpx 		#33CCFF;
  border-radius: 10rpx;
  padding-top: 30rpx;
  margin: 2%;
}

.first_box {
  width: 92%;
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.touxiang_box{
  width: 11%;
  height: 11%;
}
.touxiang {
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
}

.person {
  width: 72%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;

}

.name {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 40rpx;
}

.showname {
  font-size: 34rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.time_box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 10rpx;
}

.showtime {
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular;
}
.like_box{
  width: 20%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  justify-content: flex-start;
}
.num{
  font-size: 30rpx;
  flex-direction: row;
  margin-right: 10%;
  right: 0;
  position: absolute;
  font-family: PingFangSC-regular;
}
.like{
  width: 40rpx;
  height: 40rpx;
  margin-right: 4%;
  right: 0;
  position: absolute;
}
.commnet_box{
  width: 20%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  margin-top: 60rpx;
  justify-content: flex-start;
}

.second_box{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  margin-left: 18%;
  
}
.content{
  font-size: 29rpx;
  color: #101010;
  word-break: break-all;
}
/* 个人信息显示 */
.isInfoShow{
  display: block;
}
.isInfoHide{
  display: none;
}
.info_contain{
  height: 100%;
  width: 100%;
  position: fixed;
  background-color:rgba(0, 0, 0, .5);
  z-index: 2;
  top: 0;
  left: 0;
}
.info_contain_in{
  padding: 20rpx 0;
  width: 80%;
  background: #FFFFFF;
  margin: 30% auto;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: relative;
}

.infoHide{
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.contain2_sigle_tip {
  border-bottom: solid 3rpx #DCDCDC;
  width: 90%;
  height: 80rpx;
  margin-left: 8%;
  margin-right: 8%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
}

.left {
  width: 30%;
  height: 50rpx;
  display: flex;
  flex-grow: 1;
  font-size: 40rpx;
  margin-left: 20rpx;
  margin-top: 5rpx;
  color: #696969;
}

.tip_text {
  width: 70%;
  height: 50rpx;
  display: flex;
  flex-grow: 1;
  font-size: 40rpx;
  margin-left: 20rpx;
  margin-top: 5rpx;
  color: #444444;
}

/*  end  */